if ARGV[0].eql?('rubocop')
  begin
    require "bundler/inline"
  rescue LoadError => e
    $stderr.puts "Bundler version 1.10 or later is required. Please update your Bundler"
    raise e
  end

  gemfile(true) do
    source "https://rubygems.org"

    gem 'rubocop', require: false
  end

  system('rubocop')
else
  require './flight_company.rb'
end
